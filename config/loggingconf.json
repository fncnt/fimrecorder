{
  "version": 1,
  "formatters": {
    "simple": {
      "format": "%(asctime)s [%(name)s:%(levelname)s] %(message)s"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "DEBUG",
      "formatter": "simple",
      "stream": "ext://sys.stdout"
    },
    "logfile": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "simple",
      "filename": "debug.log",
      "mode": "a",
      "encoding": "utf-8",
      "maxBytes": 100000,
      "backupCount": 5
    }
  },
  "loggers": {
    "fimrecorder": {
      "handlers": ["logfile"],
      "level": "DEBUG"
    },
    "pyloncom": {
      "handlers": ["logfile"],
      "level": "DEBUG"
    },
    "pylonproc": {
      "handlers": ["logfile"],
      "level": "DEBUG"
    },
    "settingshandler": {
      "handlers": ["logfile"],
      "level": "DEBUG"
    }
  },
  "root": {
    "handlers": ["console"],
    "level": "DEBUG"
  }
}